<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#00838F"
    android:orientation="vertical"
    tools:context="com.example.ajmalsyed.contacts.Activities.SearchContact">

    <EditText
        android:id="@+id/search_edit_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:hint=" Search"
        android:background="@drawable/edittextshaps"
        />

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:text="SEARCH"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttoncolors"

        />

    <RelativeLayout
        android:id="@+id/listcolor"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/backlayout"
        >


        <TextView
            android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/numbertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/nametext"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:paddingBottom="0dp"/>


    </RelativeLayout>

    </LinearLayout>
